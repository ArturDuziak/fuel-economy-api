  "author": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "dev": "nodemon src/index.ts",
    "format": "prettier --write .",
    "postinstall": "npx simple-git-hooks",
    "start": "node dist/index.js",
