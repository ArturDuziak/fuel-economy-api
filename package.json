  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "nano-staged": {
    "*.{js,ts,json}": "prettier --write"
  },
  "nodemonConfig": {
    "ts": "ts-node",
    "watch": [
      "src",
      ".env"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.7.0",
    "pino-pretty": "7.0.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "nano-staged": "^0.8.0",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "simple-git-hooks": "^2.13.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=24"
  }
